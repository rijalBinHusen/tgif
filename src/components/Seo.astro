---
export type Props = {
	title: string | undefined;
	keywords: string[] | undefined;
	summary: string | undefined;
	url: URL | string | undefined;
};
const props = Astro.props as Props;
// set default value when parent pass undefined
const titleSEO = props?.title || "Home";
const keywordsSEO = props?.keywords
	? props?.keywords.join(", ")
	: ["Telegram", "Group programing", "indonesia"].join(", ");
const summarySEO = props?.summary || "Kutipan chat dari berbagai group telegram progaming indonesia";
const urlSEO = props?.url || Astro.site;
// We're just need the origin url e.g (https://www.tgif.teknologiumum.com/)
const thumbnail: string = Astro.site + "thumbnail.png";
---

<meta charset="utf-8" />
<link rel="icon" type="image/svg+xml" href="/favicon.png" />
<meta name="viewport" content="width=device-width" />
<meta name="generator" content={Astro.generator} />
<meta name="language" content="id-ID" />
<meta name="robots" content="index,follow" />
<meta name="keywords" content={keywordsSEO} />
<meta name="summary" content={summarySEO} />

<meta property="og:title" content={titleSEO} />
<meta property="og:type" content="website" />
<meta property="og:url" content={urlSEO} />
<meta property="og:image" content={thumbnail} />
<meta property="og:image:secure:url" content={thumbnail} />

<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:site" content={urlSEO} />
<meta name="twitter:title" content={titleSEO} />
<meta name="twitter:description" content={summarySEO} />
<meta name="twitter:image" content={thumbnail} />

<title>{titleSEO} | TGIF</title>
